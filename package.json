{
  "name": "@fuel-ui/design-system",
  "version": "0.0.1",
  "private": true,
  "description": "Fuel Design System",
  "author": "Fuel Labs <contact@fuel-ui.sh> (https://fuel.network/)",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "homepage": "https://github.com/FuelLabs/fuel-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FuelLabs/fuel-ui.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/FuelLabs/fuel-ui/issues"
  },
  "workspaces": [
    "./common/*",
    "./examples/*",
    "./design-system/*",
    "./stitches/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=!custom-theme",
    "build:storybook": "turbo run build:storybook --filter=!custom-theme",
    "build:watch": "pnpm -r --filter './design-system/*' --parallel build --watch",
    "changeset": "changeset",
    "changeset:check": "changeset status --since=origin/master",
    "changeset:next": "node ./scripts/changesets/next.mjs",
    "changeset:release": "changeset publish --no-git-tag",
    "changeset:version": "changeset version",
    "dev": "turbo run dev --parallel",
    "deps:update": "updates -gu && pnpm -r exec updates -gu",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm lint:check --fix",
    "lint": "run-s lint:check prettier:check",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test -- --coverage",
    "test:clear": "turbo run test -- --clearCache",
    "test:ci": "pnpm build && turbo run test -- --ci --testLocationInResults --json --coverage",
    "ts:check": "pnpm -r run ts:check",
    "prepare": "husky install",
    "pr:release": "node ./scripts/pr-release.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@changesets/get-github-info": "^0.5.2",
    "@jest/types": "^29.6.1",
    "@manypkg/get-packages": "^2.2.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "cross-fetch": "^4.0.0",
    "depcheck": "^1.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "execa": "^7.2.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "micromatch": "^4.0.5",
    "minimist": "^1.2.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "semver": "^7.5.4",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "turbo": "^1.10.12",
    "typescript": "5.1.6",
    "updates": "^14.3.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    },
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim@<0.0.3": ">=0.0.3",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "terser@>=5.0.0 <5.14.2": ">=5.14.2",
      "terser@<4.8.1": ">=4.8.1",
      "loader-utils@<1.4.1": ">=1.4.1",
      "loader-utils@>=2.0.0 <2.0.3": ">=2.0.3",
      "json5": ">=2.2.2",
      "semver@<7.5.2": ">=7.5.2",
      "word-wrap": "npm:@aashutoshrathi/word-wrap"
    }
  },
  "dependencies": {
    "@fuels/eslint-plugin": "^0.0.3",
    "@fuels/jest": "^0.0.3",
    "@fuels/prettier-config": "^0.0.3",
    "@fuels/ts-config": "^0.0.3",
    "@fuels/tsup-config": "^0.0.3"
  }
}
